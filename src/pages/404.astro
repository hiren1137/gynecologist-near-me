---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Page Not Found - Gynecologist Near Me"
  description="The page you're looking for doesn't exist. Find gynecologists and women's healthcare specialists on our homepage."
>
  <Header />
  
  <main>
    <section class="py-16 bg-gradient-to-br from-pink-50 to-purple-50 min-h-screen flex items-center">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="mb-8">
          <div class="text-8xl font-bold text-pink-600 mb-4">404</div>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Page Not Found
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
            Sorry, we couldn't find the page you're looking for. It might have been moved, deleted, or you entered the wrong URL.
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <a 
            href="/" 
            class="bg-pink-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-pink-700 transition-colors"
          >
            Go to Homepage
          </a>
          <a 
            href="/contact" 
            class="bg-white text-pink-600 border-2 border-pink-600 px-8 py-4 rounded-lg font-semibold hover:bg-pink-50 transition-colors"
          >
            Contact Support
          </a>
        </div>

        <!-- Quick Links -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-3xl mx-auto">
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <h3 class="font-semibold text-gray-900 mb-2">Find by State</h3>
            <p class="text-gray-600 text-sm mb-4">Browse gynecologists by Indian states</p>
            <a href="/#states" class="text-pink-600 hover:text-pink-700 font-medium">
              View States →
            </a>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <h3 class="font-semibold text-gray-900 mb-2">Top Cities</h3>
            <p class="text-gray-600 text-sm mb-4">Find doctors in major cities</p>
            <a href="/#cities" class="text-pink-600 hover:text-pink-700 font-medium">
              View Cities →
            </a>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <h3 class="font-semibold text-gray-900 mb-2">About Us</h3>
            <p class="text-gray-600 text-sm mb-4">Learn more about our platform</p>
            <a href="/about" class="text-pink-600 hover:text-pink-700 font-medium">
              Read More →
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout> 